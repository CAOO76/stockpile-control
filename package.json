{
  "name": "@minreport/stockpile-control",
  "private": false,
  "version": "1.0.5",
  "type": "module",
  "main": "src/plugin.ts",
  "scripts": {
    "dev": "vite",
    "dev:live": "node scripts/live-reload.js",
    "android:dev": "node scripts/live-reload.js",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "backup": "zip -r ../stockpile-control-backup-$(date +%Y%m%d-%H%M%S).zip . -x '*.git*' 'node_modules/*' 'dist/*' '.firebase/*'",
    "git:push": "bash scripts/git-push.sh",
    "sync": "npm run backup && npm run git:push",
    "build": "tsc && vite build",
    "build:android": "tsc -b && vite build --mode android",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.1",
