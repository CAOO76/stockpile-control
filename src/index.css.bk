@import url('https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:wght@400;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-25..0&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

/**
 * Industrial Mining Design System
 * Flat colors only, sharp edges, high contrast
 */

/* Industrial Borders - Sharp 4px */
.industrial-border {
  border-radius: 4px;
}

/* Camera Overlay - Pure Black Background */
.camera-overlay {
  background-color: #000000;
}

/* iOS Mobile Adjustments */
@supports (-webkit-touch-callout: none) {
  .h-screen-ios {
    height: -webkit-fill-available;
  }
}

/**
 * Grid Overlay for VisionAnalyzer (Technical)
 */
.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  background-image:
    linear-gradient(rgba(255, 255, 255, 0.2) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.2) 1px, transparent 1px);
  background-size: 50px 50px;
  opacity: 0.8;
}


/**
 * Global Styles
 * Tipograf√≠a: Atkinson Hyperlegible (MANDATORIO)
 */

/* Eliminada la clase .safe-area-container ya que el padding se aplica a #root */

:root {
  font-family: 'Atkinson Hyperlegible', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  line-height: 1.5;
  font-weight: 400;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  font-family: 'Atkinson Hyperlegible', sans-serif !important;
  font-size: 16px;
  /* min-size: 16px para compensar dpi */
  background-color: #000000;
  /* Pure black for industrial theme */
}

#root {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: env(safe-area-inset-top) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left);
}

/* Fix para Inputs en modo oscuro de Android */
input[type="text"],
input[type="search"],
input[type="number"],
input[type="email"],
textarea {
  @apply bg-transparent dark:bg-[#1a1a1a] border border-white/20 industrial-border px-3 py-2;
}

/* Hide Scrollbar Utility */
.hide-scrollbar::-webkit-scrollbar {
  display: none;
}

.hide-scrollbar {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

/* Material Symbols Helper */
.material-symbols-outlined,
.material-symbols-rounded {
  font-family: inherit;
  /* Should be set by specific symbol class */
  font-weight: normal;
  font-style: normal;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-smoothing: antialiased;
}

.material-symbols-outlined {
  font-family: 'Material Symbols Outlined';
}

.material-symbols-rounded {
  font-family: 'Material Symbols Rounded';
}