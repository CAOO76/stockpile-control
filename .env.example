# Variables de Entorno - Plugin Stockpile Control
# Copiar este archivo a .env y ajustar los valores según el entorno

# Región de MINREPORT
VITE_MINREPORT_REGION=southamerica-west1

# Información del Plugin
VITE_PLUGIN_NAME=stockpile-control
VITE_PLUGIN_VERSION=1.0.0

# Configuración del SDK de MINREPORT
VITE_MINREPORT_SDK_VERSION=1.0.3

# Entorno de ejecución (development, staging, production)
VITE_ENVIRONMENT=development

# URL base de la API de MINREPORT (opcional - ajustar según necesidad)
# VITE_MINREPORT_API_URL=https://api.minreport.com

# Configuración de logs (opcional)
VITE_LOG_LEVEL=debug

# ============================================
# FIREBASE CONFIGURATION (southamerica-west1)
# ============================================

# Firebase API Key
VITE_FIREBASE_API_KEY=your-firebase-api-key-here

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=stockpile-control-demo

# Firebase Auth Domain
VITE_FIREBASE_AUTH_DOMAIN=stockpile-control-demo.firebaseapp.com

# Cloud Storage Bucket (independiente para el plugin)
VITE_FIREBASE_STORAGE_BUCKET=stockpile-control-images.appspot.com

# Firebase Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Firebase App ID
VITE_FIREBASE_APP_ID=your-app-id

# ============================================
# DATA SHIELDING & OFFLINE PERSISTENCE
# ============================================

# Nombre de la extensión para MinReport.Data.extendEntity
VITE_EXTENSION_NAME=stockpile-control

# Habilitar persistencia offline de Firestore
VITE_OFFLINE_PERSISTENCE=true

# Colección de Firestore para datos locales
VITE_FIRESTORE_COLLECTION=stockpile-data

# ============================================
# SECURITY & RESTRICTIONS
# ============================================

# WARNING: Google App Engine está PROHIBIDO en este proyecto
# Este plugin usa EXCLUSIVAMENTE Firebase
# NO configurar ni usar App Engine bajo ninguna circunstancia
VITE_APP_ENGINE_PROHIBITED=true

# Forzar región southamerica-west1 para todos los recursos
VITE_FIREBASE_FORCE_REGION=southamerica-west1

